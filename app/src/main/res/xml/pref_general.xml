<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="24_hour_switch"
        android:summary="@string/pref_description_24_hour"
        android:title="@string/pref_title_24_hour" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_timezone_list_titles"
        android:entryValues="@array/pref_timezone_list_values"
        android:key="timezone_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_timezones" />

</PreferenceScreen>
